@model WebInterface.ViewModel.DishTypesViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>DishType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dish.DishTypeID" />
            <div class="form-group">
                <label asp-for="Dish.Course" class="control-label"></label>
                <select asp-for="Dish.Course" asp-items="Html.GetEnumSelectList<CourseType>()" class="form-control"></select>
                <span asp-validation-for="Dish.Course" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dish.Name" class="control-label"></label>
                <input asp-for="Dish.Name" class="form-control" />
                <span asp-validation-for="Dish.Name" class="text-danger"></span>
            </div>

            <input type="button" id="btnAdd" onclick="AddDropDownList()" value="Add Ingredient" />
            <hr />
            <div id="dvContainer"></div>
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
            <script type="text/javascript">

        function AddDropDownList() {
            //Build an array containing Customer records.
            var ingredient = [
                @foreach(IngredientType ingredientA in Model.Ingredients)
                {
                    @Html.Raw("{ IngredientId: "+ingredientA.IngredientTypeID+", " +
                        "Name: \""+ingredientA.Name+"\"},");
                }

            ];
            //Create a DropDownList element.
            var ddlIngredients = $("<select />");

            //Add the Options to the DropDownList.
            $(ingredient).each(function () {
               var option = $("<option />");

                //Set Ingredient Name in Text part.
                option.html(this.Name);

                //Set IngredientId in Value part.
                option.val(this.IngredientId);

                //Add the Option element to DropDownList.
                ddlIngredients.append(option);
            });

            //Reference the container DIV.
            var dvContainer = $("#dvContainer")

            //Add the DropDownList to DIV.
            var div = $("<div />");
            div.append(ddlIngredients);

            //Create a Remove Button.
            var btnRemove = $("<input type = 'button' value = 'Remove' />");
            btnRemove.click(function () {
                $(this).parent().remove();
            });

            //Add the Remove Buttton to DIV.
            div.append(btnRemove);

            //Add the DIV to the container DIV.
            dvContainer.append(div);
        };
            </script>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
