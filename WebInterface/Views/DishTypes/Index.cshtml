@model IEnumerable<WebInterface.Models.DishType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="dishTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                Category
            </th>
            <th>
                Price (euro)
            </th>
            <th data-sortable="false" data-searchable="false"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubDishType.SubType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DishTypeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DishTypeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DishTypeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<body>
    <a asp-controller="User" asp-action="Index">Go back to user overview</a>
</body>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dishTable').DataTable({
            rowReorder: true,
                bSortable: false,
            });
        });
    </script>
}