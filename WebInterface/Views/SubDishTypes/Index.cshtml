@model IEnumerable<WebInterface.Models.SubDishType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="subDishTypeTable">
    <thead>
        <tr>
            <th>
                Category
            </th>
            <th data-sortable="false" data-searchable="false"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubType)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SubDishTypeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SubDishTypeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SubDishTypeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<body>
    <a asp-controller="User" asp-action="Index">Go back to Management Index</a>
</body>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#subDishTypeTable').DataTable();
        });
    </script>
}

